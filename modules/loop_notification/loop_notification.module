    ],
    'node' => [
      'label' => 'node',
      'type' => 'node',
    ],
    'user' => [
      'label' => 'user',
      'type' => 'user',
    ],
    'comment' => [
      'label' => 'comment',
      'type' => 'comment',
    ],
